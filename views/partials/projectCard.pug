div.project-card
  h2 #{project.title}
  p #{project.summary}
  ul
    each tech in project.tech
      li #{tech}
  img(src=project.screenshot, alt=`${project.title} screenshot`)
  br
  a.btn(href=`/projects/${project._id}`) View Details
  |  |  
  a.btn(href=`/projects/${project._id}/edit`) Edit
  |  |  
  form(action=`/projects/${project._id}/delete`, method="post", style="display:inline")
    button.btn(type="submit", onclick="return confirm('Are you sure you want to delete this project?')") Delete
