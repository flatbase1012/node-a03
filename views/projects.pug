extends layout.pug

block content
  h1 My Projects
  br
  
  a(href="/projects/create" style="display:inline-block; margin-bottom:1em; background:#333; color:#fff; padding:0.5em 1em; text-decoration:none; border-radius:4px;")
    | Create New Project
  
  .search-container
    form(action="/projects/search", method="get")
      input(type="text", name="query", placeholder="Search projects...")
      button(type="submit") Search
  .projects-container
    each project in projects
      include partials/projectCard.pug
